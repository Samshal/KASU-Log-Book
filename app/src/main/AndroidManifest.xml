<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samshaltechs.logbookapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user_home"
            android:label="@string/title_activity_user_home"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".daily_attendance"
            android:label="@string/title_activity_daily_attendance"
            android:parentActivityName=".user_home"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.samshaltechs.logbookapplication.user_home" />
        </activity>
        <activity
            android:name=".weekly_progress_report"
            android:label="@string/title_activity_weekly_progress_report"
            android:parentActivityName=".user_home"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.samshaltechs.logbookapplication.user_home" />
        </activity>
        <activity
            android:name=".code_of_conduct"
            android:label="@string/title_activity_code_of_conduct"
            android:parentActivityName=".user_home"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.samshaltechs.logbookapplication.user_home" />
        </activity>
    </application>

</manifest>
