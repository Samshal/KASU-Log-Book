<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home" tools:context=".Home">
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_home_bg_image">
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_home_bg_image"
        android:src="@drawable/home_bg"
        android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="40dp"
            android:text="The Log Book App"
            android:layout_x="5dp"
            android:layout_y="250dp" />
    </AbsoluteLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_home_info_divs"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_home_info_div"
            android:text="@string/home_info_text"
            android:gravity="center"
            android:textColor="#fff"
            android:fontFamily="Roboto"
            android:elevation="4dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_home_info_div"
            android:text="@string/home_more_info_text"
            android:gravity="center"
            android:textColor="#fff"
            android:elevation="4dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"
            android:scaleType="fitXY"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Sign into your profile"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:elevation="4dp"/>
    </LinearLayout>
</LinearLayout>