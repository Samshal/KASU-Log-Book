<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_user_home"
    tools:context="com.example.samshaltechs.logbookapplication.user_home"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:background="@drawable/months_template_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="newAttendanceForm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Month One"
                android:id="@+id/textView2"
                android:layout_gravity="left|bottom"
                android:textColor="#fff" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:background="@drawable/months_template_2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="newAttendanceForm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Month Two"
                android:id="@+id/textView3"
                android:layout_gravity="left|bottom"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:background="@drawable/months_template_3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="newAttendanceForm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Month Three"
                android:id="@+id/textView4"
                android:layout_gravity="left|bottom"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:background="@drawable/months_template_4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="newAttendanceForm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Month Four"
                android:id="@+id/textView5"
                android:layout_gravity="left|bottom"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:background="@drawable/months_template_5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="newAttendanceForm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Month Five"
                android:id="@+id/textView6"
                android:layout_gravity="left|bottom"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:background="@drawable/months_template_6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="newAttendanceForm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Month Six"
                android:id="@+id/textView7"
                android:layout_gravity="left|bottom"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
